<%= form_for(@article) do |f| %>
    <%= f.label :titre %>
    <%= f.text_field :titre %>
    <%= f.label :year, 'date sur timeline' %>
    <%= f.number_field :year %>
    <%= f.text_area :content %>
    <%= f.file_field :photo %>
    <%= f.file_field :audio %>
    <%= f.file_field :video %>
    <% notions_array = Notion.all.map { |notion| [notion.name, notion.id] } %>
    <%= f.select :notion_ids, options_for_select(notions_array), {}, {:multiple => true} %>
    <%= f.submit :submit %>
<% end %>
